


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Coupons</title>
    <!-- Include jQuery library -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Bootstrap CSS for styling -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/habibmhamadi/multi-select-tag@2.0.1/dist/css/multi-select-tag.css">
 
</head>
<body>
    <div class="container-xxl flex-grow-1 container-p-y">
        <br>
        <div class="row">
            <div class="col-lg-12">
                <div class="ml-5 text-center">
                    <h2 class="ml-3 mt-3">Add Coupon</h2>
                </div>
            </div>
        </div>
        <form id="formsub">
            <div class="row m-5 p-3" style="background-color:white;">
                <div class="col-lg-6 primary">
                    <div class="mb-3">
                        <label class="form-label" for="coupon_code">Coupon Code</label>
                        <input type="text" class="form-control" id="coupon_code" name="coupon_code" placeholder=""  />
                        <div class="coupon error" style="color: red;"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="description">Description</label>
                        <textarea class="form-control" id="description" name="description" rows="4" ></textarea>
                        <div class="description error" style="color: red;"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="typeoffer">Type</label>
                        <select name="typeoffer" id="typeoffer" class="form-control">
                            <option value="Percentage">Percentage</option>
                            <option value="Flat Offer">Flat offer</option>
                        </select>
                        <div class="typeoffer error" style="color: red;"></div>
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="mb-3">
            <label class="form-label" for="minimum_amount">Minimum Amount</label>
            <input type="text" class="form-control" id="minimum_amount" name="minimum_amount" placeholder=""  />
           <div class="minamount error" style="color: red;"></div>
          </div>
                    <div class="mb-3">
                        <label class="form-label" for="discount">Discount</label>
                        <input type="text" class="form-control" id="discount" name="discount" placeholder=""  />
                        <div class="discount error" style="color: red;"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="valid_from">Valid From</label>
                        <input type="datetime-local" class="form-control" id="valid_from" name="valid_from" />
                        <div class="from error" style="color: red;"></div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label" for="valid_to">Valid To</label>
                        <input type="datetime-local" class="form-control" id="valid_to" name="valid_to" />
                        <div class="to error" style="color: red;"></div>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Coupon</button>
                </div>
            </div>
        </form>
    </div>


    <script>   
        $(document).ready(function() {

            // Handle form submission
            $("#formsub").submit((e) => {
                e.preventDefault();
                $.ajax({
                    url: "/admin/add-couponform",
                    method: 'post',
                    data: $('#formsub').serialize(),
                    success: (response) => {
                        console.log("response", response);
                        location.href = "/admin/view-couponModule"
                    },
                    error: (xhr, status, error) => {
                        try {
                            const errorObj = JSON.parse(xhr.responseText);
                            console.error("Error:", errorObj.message);
                            document.querySelector('.to.error').textContent = errorObj.message.valid_to || '';
                            document.querySelector('.from.error').textContent = errorObj.message.valid_from || '';
                            document.querySelector('.discount.error').textContent = errorObj.message.discount || '';
                            document.querySelector('.typeoffer.error').textContent = errorObj.message.typeoffer || '';
                            document.querySelector('.coupon.error').textContent = errorObj.message.couponCode || '';
                            document.querySelector('.minamount.error').textContent = errorObj.message.minAmount || '';


                        } catch (parseError) {
                            console.error("Error parsing response:", parseError);
                        }
                    }
                });
            });
        });
    </script>
</body>
</html>
