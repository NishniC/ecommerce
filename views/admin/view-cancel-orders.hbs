    type: 'POST',
    data: JSON.stringify({ status: selectedStatus }), // Convert to JSON string
    contentType: 'application/json', 

        success: function (data) {
            console.log(data)
            if (data.status) {
                console.log('Status updated successfully');
                   showSuccessModal('Status Updated', 'The status has been successfully updated.');
            } else {
                console.error('Error updating status:', data.error);
                // Handle the error
            }
        },
        error: function (error) {
            console.error('Error making AJAX request:', error);
            // Handle the error
        }
    });
}

    function showSuccessModal(title, message) {
        var modalHtml = `
            <div class="modal" tabindex="-1" role="dialog" id="successModal">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title">${title}</h5>
                            <button type="button" class="close" data-dismiss="modal" onclick="cancelsuccessBox()" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            ${message}
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="cancelsuccessBox()">OK</button>
                        </div>
                    </div>
                </div>
            </div>
        `;

        // Append the modal HTML to the body
        $('body').append(modalHtml);

        // Show the modal
        $('#successModal').modal('show');

        // Remove the modal from the DOM after it's closed
        $('#successModal').on('hidden.bs.modal', function () {
            $(this).remove();
        });
    }

        function cancelsuccessBox(){
            $('#successModal').modal('hide');
    }
</script>
