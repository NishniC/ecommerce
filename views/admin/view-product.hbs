    <style>
        #myTable-wrapper {
            margin-top: 40px; 
            padding-top: 50px;
        }
         .pagination {
        display: flex;
        justify-content: center;
        align-items: center;
        list-style: none;
    }

    .pagination .page-item {
        margin: 0 5px;
    }

    .pagination .page-item.active .page-link {
        background-color: #ee6780;
        border-color: #ee6780;
        color: #fff;
    }

    .pagination .page-link {
        color: #ee6780;
        border: 1px solid #ee6780;
        padding: 5px 10px;
        border-radius: 3px;
    }

    .pagination .page-link:hover {
        background-color: #ceabab;
    }
