         <div class="col-lg-12" style="margin-top: 15px;">
    <nav aria-label="Page navigation example">
        <ul class="pagination">                    
            {{#if isFirstPage}}
                                       
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="/admin/view-product?page={{prevPage}}"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                </li>
            {{/if}}

            {{#if currentPage}}
                <li class="page-item active">
                    <a class="page-link" href="/admin/view-product?page={{currentPage}}">{{currentPage}}</a>
                </li>
                {{#ifCond  currentPage '!=' next}}
                <li class="page-item">
                    <a class="page-link" href="/admin/view-product?page={{next}}">{{next}}</a>
                </li>
                {{/ifCond}}
            {{/if}}
             {{#ifCond  totalPages '!=' next}}
            {{#if nextPage}}
                <li class="page-item">
                    <a class="page-link" href="/admin/view-product?page={{nextPage}}"><i class="fa fa-arrow-right" aria-hidden="true"></i></a>
                </li>
            {{/if}}
            {{/ifCond}}
        </div>
    </div>
</section>



