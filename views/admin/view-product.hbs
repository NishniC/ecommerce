<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-product" class="btn ml-auto" style="background-color: #ee6780; color: #DFDCDC; margin-top: 10px; width: 200px; margin-bottom: 10px;"> + Add Product</a>
        </div>
        <div class="table-responsive">
        <table class="table mt-4" id="myTable">
            <thead>
                <tr>
                    <th scope="col" style="width: 5%">No</th>
                    <th scope="col" style="width: 15%">Title</th>
                    <th scope="col" style="width: 15%">Category</th>
                    <th scope="col" style="width: 10%">Price</th>
                    <th scope="col" style="width: 15%">Quantity</th>
                    <th scope="col" style="width: 15%" >Image</th>
                    <th scope="col" style="width: 15%">Options</th>
                    <th scope="col" style="width: 15%">Acttions</th>

                </tr>
            </thead>
            <tbody>
                {{#each products}}
                <tr>
                    <td scope="row">{{this.index}}</td> 
                    <td>{{this.Name}}</td>
                    <td>{{this.Category}}</td>
                    <td>{{this.price}}</td>
                    <td>{{this.quantity}}</td>
                    <td><img src="data:{{this.images.[0].contentType}};base64,{{this.images.[0].imageBase64}}" style="width: 50px; height: 50px;"></td>
                    <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a></td>   
                    <td><a href="#" class="btn btn-danger" onclick="showDeleteConfirmation('{{this._id}}', '{{this.Name}}')">Delete</a></td>                   
                </tr>
                {{/each}}
            </tbody>
        </table>
