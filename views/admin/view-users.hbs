<script>
    $(document).ready( function () {
    $('#myTable').DataTable({
            "columnDefs": [
                { "orderable": false, "targets": [3,4,5] } // Assuming the column index for 'Image' is 6
            ],
        "bPaginate": false,
            "bInfo": false,
    });
} );
</script>

<script>

    function populateTable(users) {
    var tableBody = $('#tablebody');
    tableBody.empty(); // Clear existing data
    users.forEach(function(user) {
        var row = '<tr>' +
            '<td>' + 1 + '</td>' +
            '<td>' + user.firstName + '</td>' +
            '<td>' + user.lastName + '</td>' +
            '<td>' + user.email + '</td>' +
            '<td>' +
            '<a href="/admin/edit-user/' + user._id + '" class="btn btn-primary">Edit</a>' +
            '</td>' +
            '<td>'; // Start of the options column
        if (user.access) {
            row += '<a href="#" class="btn btn-danger" onclick="showDeleteConfirmation(\'' + user._id + '\', \'' + user.Name + '\')">block</a>';
        } else {
            row += '<a href="#" class="btn btn-success" onclick="showunblockConfirmation(\'' + user._id + '\', \'' + user.Name + '\')">unblock</a>';
        }
        row += '</td>'; // End of the options column
        tableBody.append(row);
    });
}



    {{!-- block --}}
    function showDeleteConfirmation(userId, userName) {
        var modalHtml = `
          <div class="modal" tabindex="-1" role="dialog" id="deleteConfirmationModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Delete Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" onclick="canceldeleteBox()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to Block <strong id="productNameToDelete">${userName}</strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal" onclick="canceldeleteBox()">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDelete('${userId}')">Block</button>
            </div>
        </div>
    </div>
</div>
        `;

        // Append the modal HTML to the body
        $('body').append(modalHtml);

        // Show the modal
        $('#deleteConfirmationModal').modal('show');
    }

    function canceldeleteBox(){
            $('#deleteConfirmationModal').modal('hide');
    }
    function confirmDelete(userId) {
        // Handle the delete operation here
        console.log('Deleting user with ID:', userId);

        // Make a GET request to delete the product
        fetch(`/admin/delete-user/${userId}`, {
            method: 'GET',
            headers: {
                'Content-Type': 'application/json',
            },
        })
        .then(response => response.json())
        .then(data => {
            console.log("my data:",data)
            if (data.status) {
                console.log('Product deleted successfully');
                populateTable(data.users);
                

            } else {
                console.error('Error deleting product:', data.error);
                // Handle the error
            }

            // Close the modal
            $('#deleteConfirmationModal').modal('hide');
        })
        .catch(error => {
            console.error('Error making GET request:', error);
            // Handle the error
            // Close the modal if needed
            $('#deleteConfirmationModal').modal('hide');
        });
    }
    
