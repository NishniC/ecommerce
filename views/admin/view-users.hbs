<section>
    <div class="container">
        <div class="row">
            <a href="/admin/add-user" class="btn ml-auto" style="background-color: #ee6780; color: #DFDCDC; margin-top: 10px; width: 200px;"> + Add User</a>
        </div>
        <div class="table-responsive">
        <table class="table mt-4" id="myTable">
            <thead>
                <tr>
                    <th scope="col" style="width: 5%">No</th>
                    <th scope="col" style="width: 15%">First Name</th>
                    <th scope="col" style="width: 15%">Last Name</th>
                    <th scope="col" style="width: 15%">Email</th>
                    <th scope="col" style="width: 15%">Options</th>
                    <th scope="col" style="width: 15%">Remove Options</th>
                    
                </tr>
            </thead>
            <tbody id="tablebody">
                {{#each users}}
                <tr>
                    <td scope="row">{{this.index}}</td>
                    <td>{{this.firstName}}</td>
                    <td>{{this.lastName}}</td>
                    <td>{{this.email}}</td>
                    <td>
                    <a href="/admin/edit-user/{{this._id}}" class="btn btn-primary">Edit</a></td>

                   <td> 
                    {{#if this.access}}
                    <a href="#" class="btn btn-danger" onclick="showDeleteConfirmation('{{this._id}}', '{{this.Name}}')">block</a>
                    {{else}}
                    <a href="#" class="btn btn-success" onclick="showunblockConfirmation('{{this._id}}', '{{this.Name}}')">unblock</a>
                    {{/if}}
                    </td>                    
             

                {{/each}}
            </tbody>
        </table>

        </div>
