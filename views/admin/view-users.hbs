       <div class="col-lg-12" style="margin-top: 15px;">
    <nav aria-label="Page navigation example">
        <ul class="pagination">                    
            {{#if isFirstPage}}
                                       
            {{else}}
                <li class="page-item">
                    <a class="page-link" href="/admin/view-user?page={{prevPage}}"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
                </li>
            {{/if}}

            {{#if currentPage}}
                <li class="page-item active">
                    <a class="page-link" href="/admin/view-user?page={{currentPage}}">{{currentPage}}</a>
                </li>
                {{#ifCond  currentPage '!=' next}}
                <li class="page-item">
                    <a class="page-link" href="/admin/view-user?page={{next}}">{{next}}</a>
                </li>
