<script>
const zoom = function () {
    const zoomerBox = document.querySelector("#image-zoomer-box");
    const original = document.querySelector("#main-image");
    const magnified = document.querySelector("#image-2");
    const style = magnified.style;

    zoomerBox.addEventListener("mousemove", function (e) {
        const rect = this.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        const imgWidth = original.offsetWidth;
        const imgHeight = original.offsetHeight;
        const xperc = (x / rect.width) * 100;
        const yperc = (y / rect.height) * 100;

        style.backgroundPositionX = (xperc - 10) + "%";
        style.backgroundPositionY = (yperc - 10) + "%";
        style.left = (x - magnified.offsetWidth / 2) + "px";
        style.top = (y - magnified.offsetHeight / 2) + "px";
    });
}();


</script>




