<head>
  <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>

  <!-- Include Bootstrap CSS and JS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

  <!-- Include Lightbox2 CSS and JS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/css/lightbox.min.css">
  <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
  <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.11.3/js/lightbox.min.js"></script>
  
</head>


<section>
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel"  data-interval="3000">
  <ol class="carousel-indicators">
    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
  </ol>
  <div class="carousel-inner">
     
    <div class="carousel-item active" style="height: 400px;">
      <img class="d-block w-100 h-100" src="/images/slidesuser/img3.jpg" alt="First slide">
    </div>
    <div class="carousel-item" style="height: 400px;">
      <img class="d-block w-100 h-100" src="/images/slidesuser/img2.jpg" alt="Second slide">
    </div>
    <div class="carousel-item" style="height: 400px;">
      <img class="d-block w-100 h-100" src="/images/slidesuser/img1.jpg" alt="Third slide">
    </div>
  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>
</section>



<section>
    <div class="container d-flex justify-content-center mt-50 mb-50">
        <div class="row">
            {{#each products}} 
            <div class="col-md-4 mt-2"> 
                <div class="card h-100">
                    <div class="card-body d-flex flex-column position-relative"> <!-- Added position relative -->
                        <button type="button" class="btn btn-default wishlist position-absolute" style="top: 19px; left: 19px;" data-toggle="tooltip" data-placement="top" title="Add to Wishlist" ><a href="/user/add-to-wishlist/{{this._id}}" style="text-decoration: none;"><i class="fa fa-heart"></i></a></button> <!-- Added position absolute and styles -->
                        <div class="card-img-actions flex-grow-1">
                            <img src="data:{{this.images.[0].contentType}};base64,{{this.images.[0].imageBase64}}" class="card-img img-fluid" style="height: 470px; object-fit: cover;" alt="">
                        </div>
                        <div class="card-body bg-light text-center">
                            <div class="mb-2">
                                <h6 class="font-weight-semibold mb-2">
                                    <a href="/user/productDetails/{{this._id}}" class="text-default mb-2" data-abc="true">{{this.Name}}</a>
                                </h6>
                                <a href="#" class="text-muted" data-abc="true">{{this.Category}}</a>
                            </div>
                            <h3 class="mb-0 font-weight-semibold">{{this.price}}</h3>
                            <div>
                                <i class="fa fa-star star"></i>
                                <i class="fa fa-star star"></i>
                                <i class="fa fa-star star"></i>
                                <i class="fa fa-star star"></i>reviews
                            </div>
                            <button type="button" class="btn bg-cart" style="background-color: #E96E6E; color: white;">
                              <a href="/user/add-to-cart/{{this._id}}"><i class="fa fa-cart-plus mr-2"></i> Add to cart</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div> 
            {{/each}}
        </div>
    </div>
</section>

<style>
    .wishlist {
        background-color: transparent; /* Set default background color */
        color:aliceblue; /* Set default text color */
        border: none; /* Add border */
    }

    .wishlist:hover {
        background-color: green; /* Change background color on hover */
        color: white; /* Change text color on hover */
    }
</style>




  <script>
    // Check if the current page is the home page
    if (window.location.pathname === '/user') {
      // Find the Go Back button by its ID and hide it
      var goBackButton = document.getElementById('goBackButton');
      if (goBackButton) {
        goBackButton.style.display = 'none';
      }
    }
</script>
